<% form_for(@wiki_page, :url => wiki_page_path(:id => @wiki_page)) do |form| %>
  <%= render :partial => form %>

  <div class="operations">
    <%= form.submit t('wiki_engine.update') %> |
    <%= preview_button %> |
    <%= link_to t('wiki_engine.cancel'), wiki_page_path(:id => @wiki_page) %>
  </div>
<% end %>

<div id="preview">
  <%= render @wiki_page %>
</div>
