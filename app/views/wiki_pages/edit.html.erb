<% form_for(@wiki_page, :url => wiki_page_path(:id => @wiki_page)) do |form| %>
  <%= render :partial => form %>

  <div class="operations">
    <%= form.submit 'Update' %> |
    <%= preview_button %> |
    <%= link_to 'Cancel', wiki_page_path(:id => @wiki_page) %>
  </div>
<% end %>

<div id="preview">
  <%= render @wiki_page %>
</div>
